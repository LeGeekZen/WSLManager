<!--
    Fichier : MainWindow.xaml
    Auteur : Le Geek Zen
    Description : Interface graphique principale de l'application. Contient le menu de navigation et le conteneur des pages.
    Emplacement : WSLManagerApp/MainWindow.xaml
-->
<Window x:Class="WSLManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSLManagerApp"
        mc:Ignorable="d"
        Title="WSL Manager" Height="480" Width="800" Icon="Resources/app-icon.ico">
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Width="180" Background="#EEE">
            <Button Name="BtnSystemInfo" Content="Informations Système" Margin="10" Click="BtnSystemInfo_Click"/>
            <Button Name="BtnInstallDistro" Content="Installer une distribution" Margin="10" Click="BtnInstallDistro_Click"/>
            <Button Name="BtnManageDistros" Content="Gérer les distributions" Margin="10" Click="BtnManageDistros_Click"/>
        </StackPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
