<!--
    Fichier : Pages/SystemInfoPage.xaml
    Auteur : Le Geek Zen
    Description : Interface graphique de la page d'information système. Affiche l'état du système, des fonctionnalités WSL et propose des actions système.
    Emplacement : WSLManagerApp/Pages/SystemInfoPage.xaml
-->
<UserControl x:Class="WSLManagerApp.Pages.SystemInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Informations sur le système" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>
        
        <!-- Informations Windows -->
        <GroupBox Header="Système Windows" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Version de Windows : " Width="180"/>
                    <TextBlock Name="TxtWindowsVersion"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Fonctionnalités Windows -->
        <GroupBox Header="Fonctionnalités Windows" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Sous-système Windows pour Linux : " Width="250"/>
                    <TextBlock Name="TxtWSLFeature" Width="120"/>
                    <Button Name="BtnInstallWSLFeature" Content="Installer" Margin="2,0" Padding="8,4"/>
                    <Button Name="BtnRemoveWSLFeature" Content="Supprimer" Margin="2,0" Padding="8,4"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Plateforme de machine virtuelle : " Width="250"/>
                    <TextBlock Name="TxtVMPlatform" Width="120"/>
                    <Button Name="BtnInstallVMPlatform" Content="Installer" Margin="2,0" Padding="8,4"/>
                    <Button Name="BtnRemoveVMPlatform" Content="Supprimer" Margin="2,0" Padding="8,4"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Informations WSL -->
        <GroupBox Header="Windows Subsystem for Linux (WSL)" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="WSL installé : " Width="180"/>
                    <TextBlock Name="TxtWSLInstalled" Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Version : " Width="180"/>
                    <TextBlock Name="TxtWSLVersion"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="État du service : " Width="180"/>
                    <TextBlock Name="TxtWSLServiceStatus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Name="BtnUpdateWSL" Content="Mettre à jour WSL" Margin="0,0,10,0" Padding="8,4"/>
                    <Button Name="BtnStartWSLService" Content="Démarrer le service" Margin="0,0,10,0" Padding="8,4"/>
                    <Button Name="BtnShutdownWSL" Content="Arrêter le service" Padding="8,4"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl> 